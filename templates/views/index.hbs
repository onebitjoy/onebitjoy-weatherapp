<!DOCTYPE html>
<html lang="en">

<head>

  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Weather</title>

  <link rel="stylesheet" href="css\mainstyle.css" />
  <link rel="stylesheet" href="css\leaflet.css">
  <script src="js\leaflet.js"></script>

  <script>
    window.process = { browser: true, env: { ENVIRONMENT: 'BROWSER' } };
  </script>

</head>

<body>

  <div class="container">

    <div class="overlay">
      <p id="inside">WEATHERIUM</p>
      <form class="search">
        <input type="text" id="city" required placeholder="Enter your city">
        <button id="submitbtn">SEARCH</button>
      </form>
    </div>

    <div id="map"></div>

  </div>

  <script>

    let map = L.map('map').setView([51.505, -0.09], 6);

    L.tileLayer('https://tile.openstreetmap.org/{z}/{x}/{y}.png', {
      attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
    }).addTo(map);

    var popup = L.popup();

    function onMapClick(e) {
      map.flyTo([e.latlng.lat, e.latlng.lng], 8)
      popup
        .setLatLng(e.latlng)
        .setContent(`Coordinates: ${e.latlng.lat.toFixed(2)}, ${e.latlng.lng.toFixed(2)}`)
        .openOn(map);
      console.log(e.latlng)
    }

    map.on('click', onMapClick);

    const search_form = document.querySelector('.search')

    search_form.addEventListener('submit',
      () => {
        if (map) {
          map.remove()
        }
      })


  </script>

  <script src="js\app.js"></script>
</body>

</html>